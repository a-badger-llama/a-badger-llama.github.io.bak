<header class="header">
  <div class="title-banner">
    <a href="{{ site.url | relative_url }}" class="logo">
      <img src="{{ "assets/images/foxlogo.png" | relative_url }}" alt="fox-logo" class="logo-img">

      <h1 class="logo-text">{{ site.title | escape }}</h1>
    </a>

    <h2 class="menu-btn"><i class="fa-solid fa-bars"></i></h2>
  </div>

  <nav class="navbar container">
    {%- assign page_paths = site.pages | where: "header", true | sort: "nav_order" | map: "path" -%}

    <ul class="nav-links">
      {%- for path in page_paths -%}
        {%- assign my_page = site.pages | where: "path", path | first -%}

        {%- if my_page.title -%}
          <li class="nav-link">
            <a href="{{ my_page.url | relative_url }}">{{ my_page.title | escape }}</a>
          </li>
        {%- endif -%}
      {%- endfor -%}
    </ul>

    <button class="button call-to-action">
      Join the Newsletter
    </button>
  </nav>
</header>
